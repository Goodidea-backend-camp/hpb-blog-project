# 主機環境(dev|prod)
ENVIRONMENT=

# Postgres
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Container Image Versions
NGINX_VERSION=nginx:1.29.2-alpine
GO_VERSION=golang:1.25.0-alpine 
POSTGRES_VERSION=postgres:18.0-alpine3.22

# Port Configurations
BACKEND_PORT=8080
FRONTEND_PORT=3000
