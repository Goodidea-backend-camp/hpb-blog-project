# logroate規則

/var/log/nginx/*.log {
        su root root
        daily
        missingok
        rotate 365
        compress
        dateext
        notifempty
        create
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}